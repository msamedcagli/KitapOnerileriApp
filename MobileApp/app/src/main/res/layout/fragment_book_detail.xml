<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_background"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Geri"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>

        <!-- Kitap Görseli -->
        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"

            android:contentDescription="Kitap kapağı" />

        <ImageView
            android:id="@+id/favoriteIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:contentDescription="Favori"
            android:src="@drawable/favorite_border"
            android:clickable="true"
            android:focusable="true"
            />
        <!-- Kitap Adı -->
        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kitap Adı"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:paddingTop="12dp" />

        <!-- Yazar -->
        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yazar: İsim Soyisim"
            android:textSize="16sp"
            android:textColor="#555555"
            android:paddingTop="8dp" />

        <!-- Kategori -->
        <TextView
            android:id="@+id/bookCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori: Kurgu"
            android:textSize="16sp"
            android:textColor="#555555"
            android:paddingTop="4dp" />

        <!-- Özet -->
        <TextView
            android:id="@+id/bookSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kitap özeti buraya gelecek..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingTop="12dp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>
</ScrollView>
